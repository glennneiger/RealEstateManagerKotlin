<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/button_gradient"
        xmlns:tools="http://schemas.android.com/tools">

    <ImageView
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:id="@+id/backArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_arrow_back_black_24dp" android:layout_marginLeft="16dp"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:id="@+id/label"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">



        <EditText
                android:id="@+id/edit_description_fragment_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="6"
                android:gravity="top|left"
                android:maxLines="10"
                android:textSize="18sp"
                android:hint="Description"/>
    </LinearLayout>







    <LinearLayout
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/label"
            android:background="@color/quantum_black_100"
            android:id="@+id/progress"
            android:padding="16sp"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:paddingStart="16sp"
                android:paddingEnd="16sp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                app:fontFamily="@font/manropemedium"
                android:layout_height="wrap_content"
                android:text="Progress"
                android:gravity="center"
                />
    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="16sp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/progress"
            android:background="@color/quantum_black_100"
            android:id="@+id/progressStop"
            android:padding="16sp"
            android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:paddingStart="16sp"
                android:paddingEnd="16sp"
                android:textColor="@color/white"
                android:layout_gravity="center_vertical"
                app:fontFamily="@font/manropemedium"
                android:layout_height="wrap_content"
                android:text="Stop"
                android:gravity="center"
                />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>