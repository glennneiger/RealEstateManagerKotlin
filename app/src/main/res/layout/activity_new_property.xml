<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical" android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
            android:id="@+id/new_property_activity_main_layout"
                  android:orientation="vertical" android:layout_width="match_parent"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Status"/>
        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/spinner_status"
                android:entries="@array/statut_arrays"
                android:prompt="@string/statut_prompt"/>


        <EditText
                android:id="@+id/edit_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:inputType="textAutoComplete"
                android:textSize="18sp"
                android:hint="Type"/>




        <EditText
                android:id="@+id/edit_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:inputType="textMultiLine"
                android:lines="8"
                android:minLines="6"
                android:gravity="top|left"
                android:maxLines="10"
                android:textSize="18sp"
                android:hint="Description"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        android:orientation="horizontal">



            <EditText
                    android:id="@+id/edit_number_of_romms"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:digits="0123456789"
                    android:inputType="numberDecimal"
                    android:textSize="18sp"
                    android:hint="Rooms"/>


        <EditText
                android:id="@+id/edit_number_of_batthrooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:digits="0123456789"
                android:inputType="numberDecimal"
                android:textSize="18sp"
                android:hint="Bathrooms"/>

        <EditText
                android:id="@+id/edit_number_of_bedrooms"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:digits="0123456789"
                android:inputType="numberDecimal"
                android:textSize="18sp"
                android:hint="Bedrooms"/>



            <EditText
                    android:id="@+id/edit_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="sans-serif-light"
                    android:digits="0123456789"
                    android:inputType="numberDecimal"
                    android:textSize="18sp"
                    android:hint="Area"/>




    </LinearLayout>

        <EditText
                android:id="@+id/edit_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:fontFamily="sans-serif-light"
                android:digits="0123456789"
                android:inputType="numberDecimal"
                android:textSize="18sp"
                android:hint="Price"/>




        <EditText
                android:id="@+id/edit_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:inputType="textAutoComplete"
                android:textSize="18sp"
                android:hint="Adress"/>

        <EditText
                android:id="@+id/edit_additional_adress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:inputType="textAutoComplete"
                android:textSize="18sp"
                android:hint="Additional adress"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <EditText
                android:id="@+id/edit_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:inputType="textAutoComplete"
                android:textSize="18sp"
                android:layout_weight="1"
                android:hint="City"/>

        <EditText
                android:id="@+id/edit_postal_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:fontFamily="sans-serif-light"
                android:digits="0123456789"
                android:inputType="numberDecimal"
                android:textSize="18sp"
                android:hint="Postal code"/>

    </LinearLayout>


        <EditText
                android:id="@+id/edit_country"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:inputType="textAutoComplete"
                android:textSize="18sp"
                android:hint="Country"/>

    <EditText
            android:id="@+id/edit_place_nearby"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:inputType="textAutoComplete"
            android:textSize="18sp"
            android:hint="Place nearby"/>



    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="Created date"/>
        <DatePicker
                android:id="@+id/DatePicker_created_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:datePickerMode="spinner"
                android:calendarViewShown="false"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/activity_new_property_layout_date">


        </LinearLayout>


    <EditText
            android:id="@+id/edit_real_estate_agent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:inputType="textAutoComplete"
            android:textSize="18sp"
            android:hint="real estate manager"/>



        <Button
            android:id="@+id/button_photo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="photo"/>


        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/new_property_activity_album_photo"
                android:orientation="vertical">




        </LinearLayout>
        <Button
                android:id="@+id/button_album"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="add"/>



    <Button
            android:id="@+id/button_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:text="save"/>


    </LinearLayout>


</ScrollView>